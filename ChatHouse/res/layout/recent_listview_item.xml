<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/front"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:paddingTop="6.0dip"
    android:tag="front" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10.0dip"
        android:src="@drawable/login_default_avatar" />

    <TextView
        android:id="@+id/recent_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="25.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="58.0dip"
        android:layout_toRightOf="@id/icon"
        android:duplicateParentState="true"
        android:ellipsize="end"
        android:gravity="left|center"
        android:includeFontPadding="false"
        android:padding="0.0dip"
        android:singleLine="true"
        android:text="dddd"
        android:textColor="@drawable/contact_list_item_buddy_name_text_color"
        android:textSize="15.0sp" />

    <TextView
        android:id="@+id/recent_list_item_msg"
        android:layout_width="fill_parent"
        android:layout_height="25.0dip"
        android:layout_below="@id/recent_list_item_name"
        android:layout_marginLeft="64.0dip"
        android:layout_marginRight="30.0dip"
        android:layout_marginTop="2.0dip"
        android:duplicateParentState="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:singleLine="true"
        android:text="new message"
        android:textColor="@drawable/contact_list_item_buddy_signature_text_color2"
        android:textSize="12.0sp" />

    <TextView
        android:id="@+id/recent_list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="25.0dip"
        android:layout_above="@id/recent_list_item_msg"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginRight="10dip"
        android:duplicateParentState="true"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="0.0dip"
        android:singleLine="true"
        android:text="昨天"
        android:textColor="@drawable/contact_list_item_buddy_signature_text_color2"
        android:textSize="10.0sp" />

    <TextView
        android:id="@+id/unreadmsg"
        android:layout_width="16dip"
        android:layout_height="16.0dip"
        android:layout_alignParentRight="true"
        android:layout_below="@id/recent_list_item_name"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="5.0dip"
        android:background="@drawable/list_newmessage2"
        android:gravity="center"
        android:includeFontPadding="false"
        android:shadowColor="#19000000"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:text="10"
        android:textColor="#ffffffff"
        android:textSize="10.0dip" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="6dip"
        android:layout_below="@id/recent_list_item_msg"
        android:background="#acacac" />

</RelativeLayout>