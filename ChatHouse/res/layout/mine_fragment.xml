<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<include
        android:id="@+id/title"
        layout="@layout/custom_commen_title" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/shape_bg"
            android:orientation="vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="10.0dip" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="70.0dp"
                android:background="@drawable/skin_setting_strip_bg_unpressed"
                android:clickable="true"
                android:focusable="true" >

                <ImageView
                    android:id="@+id/face"
                    android:layout_width="65.0dp"
                    android:layout_height="65.0dp"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:layout_margin="3dp"
                    android:src="@drawable/default_head" />

                <TextView
                    android:id="@+id/nickname"
                    style="@style/C8_Font_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/face"
                    android:duplicateParentState="true"
                    android:text="我叫哈哈"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/account_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nickname"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/face"
                    android:duplicateParentState="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="账户号" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/common_strip_setting_top"
                android:clickable="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:text="我的收藏" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_strip_setting_middle"
                android:clickable="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:text="我的房源" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_strip_setting_middle"
                android:clickable="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:text="计算器" />

            <TextView
                android:id="@+id/setting"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_strip_setting_bottom"
                android:clickable="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:text="设置" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>